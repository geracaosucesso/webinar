<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='site'>
  <inherits name='virtuozo.themes.FontAwesome' />
  <inherits name='virtuozo.themes.Bootstrap' />
  <inherits name='virtuozo.Bootstrap' />
  <inherits name='virtuozo.Core' />
  <inherits name='virtuozo.Http' />
  <inherits name='virtuozo.Animate' />
  <inherits name='ghostbuster.API' />
  
  <inherits name="com.googlecode.gwt.crypto.Crypto"/>

  <source path="interfaces" />
  <source path="infra" />
  <source path="application" />
  <source path="i18n" />
  <public path="css"/>
  
  <stylesheet src="site.css"/>
  
  <entry-point class='com.gs.application.Starter' />

  <!-- i18N configurations -->
  <extend-property name="locale" values="pt"/>
  <set-property-fallback name="locale" value="pt"/> 
  
  <!-- Dev Settings -->
  <add-linker name="xsiframe"/>
  <set-configuration-property name="devModeRedirectEnabled" value="true"/>
  <set-property name="compiler.useSourceMaps" value="true" />
  <collapse-all-properties />
</module>